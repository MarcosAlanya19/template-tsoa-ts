{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts","src/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src",
    "basePath": "/api/v1"
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["./config/*"],
      "@server/*": ["./server/*"],
      "@config/": ["./config/index.ts"],
      "@services/*": ["./app/application/services/*"],
      "@contracts/*": ["./app/application/contracts/*"],
      "@utils/*": ["./app/infrastructure/shared/utils/*"],
      "@helpers/*": ["./app/infrastructure/shared/helpers/*"],
      "@configs/*": ["./app/infrastructure/shared/configs/*"],
      "@controllers/*": ["./app/infrastructure/webApi/controllers/*"],
      "@middlewares/*": ["./app/infrastructure/webApi/middlewares/*"],
      "@externalApi/*": ["./app/infrastructure/externalApi/*"],
      "@database/*": ["./app/infrastructure/database/*"],
      "@dtos/*": ["./app/domain/dtos/*"],
      "@entities/*": ["./app/domain/entities/*"]
    }
  }

}
